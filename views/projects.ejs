<%- include("partials/header"); -%>

    <section id="project-images">
        <div class="container">

            <h1 class="text-center mb-5">Status of Personal Projects</h1>
            <!-- Show an image of current projects that are in progress and completed -->
            <div id="carouselExampleCaptions" class="carousel slide">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                        aria-current="true" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                        aria-label="Slide 2"></button>
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                        aria-label="Slide 3"></button>
                </div>
                <div class="carousel-inner">
                    <h1></h1>
                    <div class="carousel-item active">
                        <img src="/images/netflix.png" class="d-block w-100 opacity-75" alt="Netflix page">
                        <div class="carousel-caption d-none d-md-block border rounded-3 shadow-lg">
                            <h5>Currently working on a Netflix homepage clone</h5>
                            <p>This will require use of JavaScript, HTML, CSS and frontend libraries.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/project1.png" class="d-block w-100 opacity-75" alt="Weather app">
                        <div class="carousel-caption d-none d-md-block border rounded-3 shadow-lg">
                            <h5>Weather App</h5>
                            <p>Enter a city of your choice and recieve weather info about it. Made using the
                                OpenWeatherMap
                                API.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="/images/Calculator.jpg" class="d-block w-100" alt="Calculator Project">
                        <div class="carousel-caption d-none d-md-block border rounded-3 shadow-lg">
                            <h5>Calculator</h5>
                            <p>Currently working on a calculator app that will test my skills in JavaScript and CSS.</p>
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>

        </div>
    </section>

    <%- include("partials/footer"); -%>